<% matching_result = Game.order(final_score: :desc) %>

<table border="1">
  <thead>
    <tr>
      <th>Index No.</th>
      <th>User Name</th>
      <th>Score</th>
      <th>Game Id</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% matching_result.each_with_index do |game, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= game.user_id %></td>
        <td><%= game.final_score %></td>
        <td><%= game.game_id %></td>
        <td><%= game.created_at.strftime("%B %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
